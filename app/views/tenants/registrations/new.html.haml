%ul#myTab{class: "nav nav-tabs nav-justified bn"}
	%li= link_to "Login"
	%li= link_to "Register"
#myTabContent{class: "tab-content bn"}
	#log-in{class: "tab-pane fade active in"}
		%div{class: "social-buttons text-center mt10"}
			%h4 #{resource_name.capitalize}
		.separator
			%hr
		= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: 'form', class: 'form-horizontal mt10', id: 'login-form', novalidate: "novalidate"}) do |f|
			.form-group
				.col-lg-12
					= f.text_field :email, autofocus: true, class: "form-control left-icon", placeholder: "Your email ..."
					%i{class: "ec-user s16 left-input-icon"}
			.form-group
				.col-lg-12
					= f.password_field :password, class: "form-control left-icon", placeholder: "Your password"
					%i{class: "ec-locked s16 left-input-icon"}
					%span.help-block
						= link_to '/' do
							%small Forgot password ?
			.form-group
				%div{class: "col-lg-6 col-md-6 col-sm-6 col-xs-8"}
					%label.checkbox{for: "remember_me"}
						= f.check_box :remember_me
						Remember me?

				%div{class: "col-lg-6 col-md-6 col-sm-6 col-xs-4"}
					= f.submit "Sign in", class: "btn btn-success pull-right	"
