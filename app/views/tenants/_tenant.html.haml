%div{class: 'panel panel-default'}
	.panel-heading
		%h4.panel-title
			%strong= tenant.apartment
	.panel-body
		.row
			%div{class: 'col-lg-6 col-md-6 col-sm-6 col-xs-12'}
				%p Full name: #{tenant.full_name}
				%p Uresolved issues: #{tenant.unresolved_issues.count}
			%div{class: 'col-lg-6 col-md-6 col-sm-6 col-xs-12 text-right'}
				= link_to 'Show issues', managers_tenant_issues_path(tenant), class: 'btn btn-info'
