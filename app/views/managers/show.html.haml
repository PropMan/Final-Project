.row
  / Start .row
  / Start .page-header
  .col-lg-12.heading
    %h1.page-header
      %i.ec-user
      = current_manager.full_name
  / Start .row
  / st-settings
.row
  %div{class: 'col-lg-2 col-md-4 col-sm-6 col-xs-12'}
    %div{class: 'tile-stats b brall mb25'}
      = link_to '' do
        .tile-stats-icon
          %i{class: 'ec-cog color-red'}
        .tile-stats-content
          .tile-stats-number= @manager.no_of_new_issues
          .tile-stats-text New Issues
        .clearfix
  %div{class: 'col-lg-2 col-md-4 col-sm-6 col-xs-12'}
    %div{class: 'tile-stats b brall mb25'}
      = link_to '' do
        .tile-stats-icon
          %i{class: 'ec-clock color-red'}
        .tile-stats-content
          .tile-stats-number #{@manager.avg_time_for_completion} days
          .tile-stats-text Average Rsponse Time
        .clearfix
  %div{class: 'col-lg-2 col-md-4 col-sm-6 col-xs-12'}
    %div{class: 'tile-stats b brall mb25'}
      = link_to '' do
        .tile-stats-icon
          %i{class: 'ec-info color-teal'}
        .tile-stats-content
          .tile-stats-number=@manager.avg_rating
          .tile-stats-text Average Rating
        .clearfix

.row
  .col-lg-3{class: 'color-blue text-center mb20'}
    %h3 Recent issues

.row
  .col-lg-3
    = render @issues

