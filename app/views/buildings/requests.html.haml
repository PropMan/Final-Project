.row
	%div{class: 'col-lg-12 heading'}
		%h1.page-header
			%i.ec-list
			Requests

.row
	.col-lg-3
		- @requests.each do |tenant|
			%div{class: 'panel panel-default'}
				.panel-heading
					%h4.panel-title
						%strong= tenant.full_name
				.panel-body
					.row
						%div{class: 'col-lg-6 col-md-6 col-sm-6 col-xs-12'}
							%p Apartment: #{tenant.apartment}
							%p #{tenant.building.full_address}
						%div{class: 'col-lg-6 col-md-6 col-sm-6 col-xs-12 text-right'}
							= form_for tenant, url: managers_tenant_approve_path(tenant), method: :put do |f|
								= f.submit "Decline tenant", value: 'decline', class: 'btn btn-danger'
								= f.submit "Approve tenant", value: 'approve',class: 'btn btn-success'

